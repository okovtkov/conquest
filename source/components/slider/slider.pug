mixin slider(title, watches)
    +positioner
        h2.title #{title}
    .slider
        button.slider__button.slider__button_prev
            +svg-icon('arrow')
        button.slider__button.slider__button_next
            +svg-icon('arrow')
        .slider__hidden-block
            .slider__container
                each watch in watches
                    +watch-card(watch).slider__item